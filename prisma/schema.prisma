generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String  @id @default(cuid())
  sessionId String  @unique
  name      String?

  // AI Model Settings
  preferredModel String @default("mistral-small-latest")

  // AI Memory Settings
  enableSummarization Boolean @default(true)
  messageHistoryLimit Int     @default(20)

  // User Persona
  usePersona Boolean @default(false)
  persona    String? @db.Text

  chats Chat[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Chat {
  id         String  @id @default(cuid())
  userId     String
  title      String?
  usePersona Boolean @default(true)
  summary    String? @db.Text

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages Message[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model Message {
  id        String                       @id @default(cuid())
  chatId    String
  role      String
  content   String                       @db.Text

  chat Chat @relation(fields: [chatId], references: [id], onDelete: Cascade)

  createdAt    DateTime @default(now())
  isSummarized Boolean  @default(false)

  @@index([chatId])
  @@index([createdAt])
  @@index([isSummarized])
}
